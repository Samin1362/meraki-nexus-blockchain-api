{
  "name": "meraki-nexus-payment-integrated",
  "version": "2.0.0",
  "description": "MerakiNexus Payment API with integrated React frontend",
  "main": "api/payment.js",
  "scripts": {
    "build": "cd frontend && npm install && npm run build",
    "start": "node api/payment.js",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:api": "nodemon api/payment.js",
    "dev:frontend": "cd frontend && npm start",
    "deploy": "vercel --prod",
    "test": "npm run build && npm start"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "ethers": "^6.8.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "blockchain",
    "payment",
    "ethereum",
    "metamask",
    "react",
    "vercel"
  ],
  "author": "MerakiNexus",
  "license": "MIT"
}
